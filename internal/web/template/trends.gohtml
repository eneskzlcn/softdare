{{template "layout.gohtml" .}}

{{define "content"}}
<div class="mx-auto" style="width: 600px; padding: 10px;">
    {{if eq (len .Posts) 0}}
    <p> No posts yet.</p>
    {{else}}
    <ul class="list-group list-group-flush">
        {{range .Posts}}
            {{template "post-article.gohtml" .}}
            <hr>
        {{end}}
    </ul>
    {{end}}
</div>
{{end}}